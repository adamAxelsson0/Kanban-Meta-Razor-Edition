@page "{boardId}"
@model EditBoardModel
@{
<h1>@ViewData["Title"]</h1>

<form method="post" asp-page-handler="EditBoard">
  <div class="form-group">
    <label for="edit-board-title" class="col-form-label">Title</label>
    <input type="text" class="form-control" id="edit-board-title" name="edit-board-title" value="@Model.ActiveBoard.Title">
    <br>
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>

<form method="post" asp-page-handler="DeleteBoard" asp-route-boardId="@Model.ActiveBoard.Id">
  <button type="submit" class="btn btn-danger">Delete</button>
</form>

<div class="jumbotron danger">
  @foreach(var message in Model.Messages)
  {
    <p>@message</p>
  }
</div>
}
