@page "{id}"
@model EditItemModel 
@{
    ViewData["Title"] = "Edit Item";
}
<form method="post"  asp-page-handler="EditItem" asp-route-id="@Model.Item.Id">
  <div class="form-group">
    <label for="item-title">Title</label>
    <input type="text" class="form-control" id="item-title" name="item-title" placeholder="@Model.Item.Title">
  </div>
  <div class="form-group">
    <label for="item-description">Description</label>
    <input type="text" class="form-control" id="item-description" name="item-description" placeholder="@Model.Item.Description">
  </div>
  <div class="form-group">
    <label for="item-column">Change Column</label>
    <select class="form-control" id="item-column" name="item-column">
    @foreach (var column in Model.Board.Columns)
    {
        <option value="@column.Id">@column.Title</option>
    }
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>

<form method="post"  asp-page-handler="DeleteItem" asp-route-itemId="@Model.Item.Id">
<button type="submit" class="btn btn-danger">Delete Item</button>
</form>